-- 创建租户表
CREATE TABLE Tenant (
    tenant_id INT AUTO_INCREMENT PRIMARY KEY COMMENT '租户ID，主键，自动增长', -- 租户ID
    name VARCHAR(100) NOT NULL COMMENT '租户姓名，非空', -- 租户姓名
    contact_number VARCHAR(15) NOT NULL COMMENT '联系电话，非空', -- 联系电话
    email VARCHAR(100) COMMENT '邮箱地址', -- 邮箱地址
    identification_number VARCHAR(20) COMMENT '身份证号', -- 身份证号
    viewing_demand BOOLEAN DEFAULT FALSE COMMENT '看房需求，默认为不需要看房', -- 看房需求
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP COMMENT '创建时间，默认为当前时间戳' -- 创建时间
) COMMENT='租户信息表'; -- 表注释

-- 创建房东表
CREATE TABLE Landlord (
    landlord_id INT AUTO_INCREMENT PRIMARY KEY COMMENT '房东ID，主键，自动增长', -- 房东ID
    name VARCHAR(100) NOT NULL COMMENT '房东姓名，非空', -- 房东姓名
    contact_number VARCHAR(15) NOT NULL COMMENT '联系电话，非空', -- 联系电话
    email VARCHAR(100) COMMENT '邮箱地址', -- 邮箱地址
    identification_number VARCHAR(20) COMMENT '身份证号', -- 身份证号
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP COMMENT '创建时间，默认为当前时间戳' -- 创建时间
) COMMENT='房东信息表'; -- 表注释

-- 创建房源表
CREATE TABLE Property (
    property_id INT AUTO_INCREMENT PRIMARY KEY COMMENT '房源ID，主键，自动增长', -- 房源ID
    landlord_id INT COMMENT '房东ID，外键引用房东表', -- 房东ID
    address VARCHAR(255) NOT NULL COMMENT '地址，非空', -- 地址
    rent_price DECIMAL(10, 2) NOT NULL COMMENT '租金价格，非空', -- 租金价格
    deposit DECIMAL(10, 2) COMMENT '押金', -- 押金
    available BOOLEAN DEFAULT TRUE COMMENT '是否可用，默认为可用', -- 是否可用
    image_url VARCHAR(255) COMMENT '图片路径或URL', -- 图片路径或URL
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP COMMENT '创建时间，默认为当前时间戳', -- 创建时间
    FOREIGN KEY (landlord_id) REFERENCES Landlord(landlord_id) COMMENT '外键约束' -- 外键约束
) COMMENT='房源信息表'; -- 表注释

-- 创建租赁合同表
CREATE TABLE LeaseAgreement (
    agreement_id INT AUTO_INCREMENT PRIMARY KEY COMMENT '合同ID，主键，自动增长', -- 合同ID
    tenant_id INT COMMENT '租户ID，外键引用租户表', -- 租户ID
    property_id INT COMMENT '房源ID，外键引用房源表', -- 房源ID
    start_date DATE NOT NULL COMMENT '合同开始日期，非空', -- 合同开始日期
    end_date DATE NOT NULL COMMENT '合同结束日期，非空', -- 合同结束日期
    monthly_rent DECIMAL(10, 2) NOT NULL COMMENT '每月租金，非空', -- 每月租金
    agreement_type VARCHAR(50) COMMENT '合同押金支付方式', -- 合同押金支付方式
    status ENUM('Active', 'Inactive', 'Expired') DEFAULT 'Active' COMMENT '合同状态，默认为有效', -- 合同状态
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP COMMENT '创建时间，默认为当前时间戳', -- 创建时间
    FOREIGN KEY (tenant_id) REFERENCES Tenant(tenant_id) COMMENT '外键约束', -- 外键约束
    FOREIGN KEY (property_id) REFERENCES Property(property_id) COMMENT '外键约束' -- 外键约束
) COMMENT='租赁合同信息表'; -- 表注释

-- 看房表
CREATE TABLE Viewing (
    viewing_id INT AUTO_INCREMENT PRIMARY KEY COMMENT '看房ID，主键，自动增长', -- 看房ID
    tenant_id INT COMMENT '租户ID，外键引用租户表', -- 租户ID
    property_id INT COMMENT '房源ID，外键引用房源表', -- 房源ID
    scheduled_time DATETIME NOT NULL COMMENT '预约看房时间，非空', -- 预约看房时间
    status ENUM('Scheduled', 'Confirmed', 'Cancelled') DEFAULT 'Scheduled' COMMENT '看房状态，默认为已预约', -- 看房状态
    notes TEXT COMMENT '备注信息', -- 备注信息
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP COMMENT '创建时间，默认为当前时间戳', -- 创建时间
    FOREIGN KEY (tenant_id) REFERENCES Tenant(tenant_id) COMMENT '外键约束', -- 外键约束
    FOREIGN KEY (property_id) REFERENCES Property(property_id) COMMENT '外键约束' -- 外键约束
) COMMENT='看房信息表'; -- 表注释

-- 创建房源属性表
CREATE TABLE PropertyAttributes (
    attribute_id INT AUTO_INCREMENT PRIMARY KEY COMMENT '属性ID，主键，自动增长', -- 属性ID
    property_id INT NOT NULL COMMENT '房源ID，外键引用房源表', -- 房源ID
    orientation ENUM('North', 'South', 'East', 'West', 'Northeast', 'Northwest', 'Southeast', 'Southwest') COMMENT '朝向', -- 朝向
    has_independent_bathroom BOOLEAN DEFAULT FALSE COMMENT '是否有独立卫浴', -- 是否有独立卫浴
    has_air_conditioning BOOLEAN DEFAULT FALSE COMMENT '是否有空调', -- 是否有空调
    number_of_beds INT COMMENT '几人间（几张床）', -- 几人间
    room_structure VARCHAR(50) COMMENT '房间结构（几室几厅）', -- 房间结构
    has_balcony BOOLEAN DEFAULT FALSE COMMENT '是否有阳台', -- 是否有阳台
    furniture_types TEXT COMMENT '家具种类', -- 家具种类
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP COMMENT '创建时间，默认为当前时间戳', -- 创建时间
    FOREIGN KEY (property_id) REFERENCES Property(property_id) COMMENT '外键约束' -- 外键约束
) COMMENT='房源属性信息表'; -- 表注释

-- 创建续租表
CREATE TABLE Renewal (
    renewal_id INT AUTO_INCREMENT PRIMARY KEY COMMENT '续租ID，主键，自动增长', -- 续租ID
    agreement_id INT COMMENT '合同ID，外键引用租赁合同表', -- 合同ID
    new_start_date DATE NOT NULL COMMENT '新的开始日期，非空', -- 新的开始日期
    new_end_date DATE NOT NULL COMMENT '新的结束日期，非空', -- 新的结束日期
    renewed_monthly_rent DECIMAL(10, 2) NOT NULL COMMENT '续租后每月租金，非空', -- 续租后每月租金
    renewed_status ENUM('Pending', 'Approved', 'Rejected') DEFAULT 'Pending' COMMENT '续租状态，默认为待定', -- 续租状态
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP COMMENT '创建时间，默认为当前时间戳', -- 创建时间
    FOREIGN KEY (agreement_id) REFERENCES LeaseAgreement(agreement_id) COMMENT '外键约束' -- 外键约束
) COMMENT='续租信息表'; -- 表注释

-- 创建人员管理表
CREATE TABLE UserManagement (
    user_id INT AUTO_INCREMENT PRIMARY KEY COMMENT '用户ID，主键，自动增长', -- 用户ID
    username VARCHAR(50) NOT NULL COMMENT '用户名，非空', -- 用户名
    password VARCHAR(255) NOT NULL COMMENT '密码，非空', -- 密码
    role ENUM('Admin', 'Agent', 'User') NOT NULL COMMENT '角色类型', -- 角色类型
    contact_number VARCHAR(15) COMMENT '联系电话', -- 联系电话
    email VARCHAR(100) COMMENT '邮箱地址', -- 邮箱地址
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP COMMENT '创建时间，默认为当前时间戳', -- 创建时间
    updated_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP COMMENT '更新时间，默认为当前时间戳' -- 更新时间
) COMMENT='人员管理信息表'; -- 表注释

